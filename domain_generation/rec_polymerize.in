# Polymerization script for TMC carbon to MPD nitrogen 
# Usage: Ensure call to LAMMPS is made from folder where data.lmps is saved, assume that reaction scripts are contained in ../../scripts from folder where data.lmps is saved.
# Usage: Ensure command line defines -var mult, -var rand, -var xlink, and -var scale

# read_restart restarts_polym/restart.750000.lmp
# System
log logs/log.POLYM
units            real
atom_style       full
dimension        3
newton           off
boundary         p p p 
echo             none 

#Styles
pair_style       lj/charmm/coul/long 7.0 9.0
pair_modify      shift no mix sixthpower
kspace_style     pppm 1.0e-4
kspace_modify    diff ad
bond_style       harmonic
angle_style      harmonic
dihedral_style   charmm
improper_style   harmonic
special_bonds    charmm



# Data file input
#Sets up domain size and number of atoms
# variable BOXSIZE equal 90*${mult}^(1/3)
variable BOXSIZE_X equal 90*${mult}^(1/3)
variable BOXSIZE_Y equal 90*${mult}^(1/3)
variable BOXSIZE_Z equal 90*${mult}^(1/3)*${scale} #scales z dimesion based on the x,y dimensions
variable mult_scaling equal ${mult}*${scale} #Scale factor for atoms
variable NUMMPD equal 300*${mult_scaling} #change
variable NUMATOMS equal ${mult_scaling}*200*18+${mult_scaling}*300*16 #change
#dump 1 all custom 1000 logs/trajectory_polym.lammpstrj id type x y z vx vy vz #aj added line for VMD visualization
read_data ../../domain_in/TMC_converted.lmps extra/improper/per/atom 2
displace_atoms all move $(5*v_mult) $(5*v_mult) $(5*v_mult_scaling) units box #change
delete_atoms group all
change_box all x final 0 ${BOXSIZE_X} y final 0 ${BOXSIZE_Y} z final 0 ${BOXSIZE_Z}  #change boxsizes
lattice fcc 11.3
molecule MPDmol ../../domain_in/MPD.mol 
molecule TMCmol ../../domain_in/TMC.mol
region WHOLEBOX block $(xlo+10) $(xhi-5) $(ylo+10) $(yhi-5) $(zlo+10) $(zhi-5) units box side in
create_atoms 0 box subset ${NUMMPD} $(25523*v_rand) mol MPDmol 212123
group MPDs union all
dump 1 all custom 1000 logs/initial_structure.lammpstrj id type x y z vx vy vz
undump 1


label packloop
variable p loop 1000
variable NUMTMC equal (${NUMATOMS}-$(atoms))/18
create_atoms 0 box subset ${NUMTMC} $(525621*v_p*v_rand) mol TMCmol 325132
group TMCs subtract all MPDs
print "Number of atoms in TMCs group: $(count(TMCs))"
delete_atoms overlap 1.0 TMCs all mol yes #aj switch from 1.0
fix 1 all nve
run 0
unfix 1
if "$(atoms) == ${NUMATOMS}" then "jump SELF packbreak"
next p
jump SELF packloop
label packbreak
dump 2 all custom 1000 logs/packing_structure.lammpstrj id type x y z vx vy vz
undump 2
reset_atoms id

# Settings
dielectric       1.0
neighbor         2.0 bin
neigh_modify     delay 0 every 1 check yes
timestep         10.0
run_style        verlet

# Minimization Step
min_style        sd
minimize         1.0e-5 1.0e-5 10000 100000
min_style        cg
min_modify       line quadratic
minimize         1.0e-8 1.0e-8 10000 100000
write_data data.lmps

timestep 1.0

molecule mol1 ../../domain_in/MPD_TMC_prerxn.mol
molecule mol2 ../../domain_in/MPD_TMC_postrxn.mol

variable BONDFREQ equal 50
group NUM_AMIDE type 7
variable MAX_BONDS equal count(NUM_AMIDE)
print "MAX_BONDS = ${MAX_BONDS}"
variable TARGET_BONDS equal (${MAX_BONDS}*${xlink}) #target crosslinking degree

label SETRXN
fix PArxn all bond/react stabilization yes statted_grp .03 &
  react rxn1 all ${BONDFREQ} 0.0 5.0 mol1 mol2 ../../domain_in/MPDTMC_rxnmap.in

thermo 100
thermo_style custom step temp press density f_PArxn[1]

variable PAbonds_made equal f_PArxn[1]

restart 100 restarts_polym/polym.restart
label loop
variable a loop 375
if "${a} > 3" then "restart 10000 restarts_polym/polym.restart" 
print "==================================Current bonds formed = ${PAbonds_made} Minimum bonds desired = ${TARGET_BONDS}======================================="
print "==================================NVT PA POLYMERIZATION RUN: 300 C==============================="
velocity all create 300.0 $(66644*v_a*v_rand)
fix 1 statted_grp_REACT nvt temp 300 300 $(100.0*dt)
fix 4 bond_react_MASTER_group temp/rescale 50 300 300 10 1
run           1000
unfix 1
unfix 4
fix 1 statted_grp_REACT npt temp 300 300 $(100.0*dt) iso 0.5 0.5 $(100.0*dt)
fix 4 bond_react_MASTER_group temp/rescale 50 300 300 10 1
run 1000
unfix 1
unfix 4
reset_atoms id
if "${PAbonds_made} >= ${TARGET_BONDS}" then "jump SELF break"
variable b equal ${a}
next a

jump SELF loop

label break
print "==================================FORMING BONDS COMPLETE DONE: Total bonds formed = ${PAbonds_made}============"
print "${PAbonds_made}" file PA_bonds.in
variable  PAbonds_final equal ${PAbonds_made}
unfix PArxn


velocity all scale 300.0
fix 1 all nvt temp 300 300 $(1.*dt)
dump 3 all custom ${BONDFREQ} logs/polymerization_structure.lammpstrj id type x y z vx vy vz 
variable final_steps equal 750000-$(step) #aj changed from 750000
print "==================================PA EQUILIBRATION RUN NUMBER OF STEPS = ${final_steps}================="
thermo_style custom step temp press density
run 750000 upto #changed from 750000
unfix 1
undump 3


# Data file output
reset_atoms id
write_data       logs/polym.lmps

#Remove Hexane
group HEXANE type 9 10
delete_atoms group HEXANE
reset_atoms id
write_data       logs/polym_clean.lmps

variable NUM_OH equal (${MAX_BONDS}*0.8)
print "NUMBER of OH: ${NUM_OH}"

region bawks block INF INF INF INF INF INF
molecule OH ../../domain_in/hydroxide.mol

create_atoms 0 random ${NUM_OH} 43770 bawks mol OH 54383 
minimize         1.0e-4 1.0e-4 1000 100000
write_data logs/term_data.lmps


molecule mol3 ../../domain_in/TMC_OH_prerxn.mol
molecule mol4 ../../domain_in/TMC_OH_postrxn.mol
fix OHrxn all bond/react stabilization yes statted_grp .03 &
  react rxn1 all ${BONDFREQ} 0.0 5.0 mol3 mol4 ../../domain_in/TMCOH_rxnmap.in #aj 3rd float value changed, proximity for rxn, original=5.0

group Cls type 18
variable OPEN_C equal count(Cls)
print "OPEN CHLORIDES ${OPEN_C}" #aj check to make sure there are open chlorides in system for rxn to occur
variable OHBONDS_NEEDED equal ${OPEN_C}

variable OHbonds_made equal f_OHrxn[1]
thermo_style custom step temp press density f_OHrxn[1]

label loop2
variable c loop 375
print "==================================Current bonds formed = ${OHbonds_made}======================================="
print "==================================NVT OH POLYMERIZATION RUN: 300 C==============================="
velocity all create 300.0 $(41234*v_c*v_rand)
fix 1 statted_grp_REACT nvt temp 300 300 $(1.*dt)
fix 4 bond_react_MASTER_group temp/rescale 50 300 300 10 1
run 1000
unfix 1
unfix 4
fix 1 statted_grp_REACT npt temp 300 300 $(1.*dt) iso 0.5 0.5 $(1.*dt)
fix 4 bond_react_MASTER_group temp/rescale 50 300 300 10 1
run 1000
unfix 1
unfix 4
reset_atoms id
print "Checking bonds: Current = ${OHbonds_made}, Needed = ${OHBONDS_NEEDED}"
if "${OHbonds_made} >= ${OHBONDS_NEEDED}" then "jump SELF break2"
variable d equal ${c}
next c
jump SELF loop2


label break2
print "==================================FORMING BONDS COMPLETE DONE: Total bonds formed = ${OHbonds_made}============"
unfix OHrxn

variable final_steps2 equal 750000
fix 1 all nvt temp 300 300 $(100.0*dt)
print "==================================PA EQUILIBRATION RUN NUMBER OF STEPS = ${final_steps2}================="
thermo_style custom step temp press density
run 1500000 upto #aj changed from 1500000
unfix 1


group EXCESSOHCL type 11 13 18
delete_atoms group EXCESSOHCL bond yes
dump 4 all custom 10000 logs/OH_structure.lammpstrj id type x y z vx vy vz
undump 4
# Data file output
reset_atoms id
write_data logs/term_final.lmps
